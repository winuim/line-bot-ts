{
  "name": "line-bot-ts",
  "version": "1.0.0",
  "description": "An example LINE bot with TypeScript made to echo messages",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "gts clean",
    "build": "npm run clean && npm run compile",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "gts lint",
    "compile": "tsc --pretty",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run compile"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run fix"
    ]
  },
  "dependencies": {
    "@line/bot-sdk": "^7.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "gts": "^3.1.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  }
}
