{
  "name": "line-bot-ts",
  "version": "1.0.0",
  "description": "An example LINE bot with TypeScript made to echo messages",
  "engines": {
    "node": "14.x"
  },
  "main": "./dist/server.js",
  "scripts": {
    "clean": "gts clean",
    "build": "npm run clean && npm run compile && npm run copy-static-assets",
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config dist/server.js",
    "serve-debug": "nodemon --inspect -r dotenv/config dist/server.js",
    "test": "jest",
    "lint": "gts lint",
    "fix": "gts fix",
    "compile": "tsc --pretty",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-compile\" \"npm run watch-serve\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-compile\" \"npm run serve-debug\"",
    "watch-serve": "nodemon -r dotenv/config dist/server.js",
    "watch-compile": "tsc -w --pretty",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run compile"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "dependencies": {
    "@line/bot-sdk": "^7.2.0",
    "axios": "^0.21.1",
    "client-oauth2": "^4.3.3",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.5"
  },
  "devDependencies": {
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.39",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.24.0",
    "gts": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.2",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
